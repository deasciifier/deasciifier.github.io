<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>
if (typeof(window.Deasciifier)=="undefined") {
  window.Deasciifier = {};
}
</script>
<script src="/static/js/allscripts.js?5"></script>
<script>
var textArea = document.getElementById("txt");

var current_lang = "tur";
var PageTexts = {
  preload_text:{
    "tur":"Y&#252;kleniyor...",
    "eng":"Loading..."
  },
  info_text:{
   "tur":"&#199;evirmek istedi&#287;iniz metni buraya giriniz.",
   "eng":"Enter your text here to deasciify."
  }
};
// Sets the language of the page
function setUILang(lang) {
  $('.' + current_lang).hide();      // Hide current language's items
  $("#lang_" + current_lang).show(); // Show current language's button
  $('.' + lang).show();              // Show new language's items
  $("#lang_" + lang).hide();         // Hide new language's button
  current_lang = lang;
  if (first_time_clicked) {
    $(textArea).html(PageTexts.info_text[current_lang]);
  }
  DeasciifyBox.setUILang(("lang"=="tur")?"tr":"en");
  return false;
}

function enableControls(enabled) {
  var ids = ["txt", "btn_deasciify", "btn_asciify"];
  for (var i=0; i<ids.length; i++) {
    if (enabled) {
      $("#" + ids[i]).removeAttr('disabled');
    } else {
      $("#" + ids[i]).attr('disabled', 'disabled');
    }
  }
}

function getSizeBin(result) {
  if (!result || !result.text) {
    return "empty";
  }
  var bins = [10, 25, 50,
              100, 250, 500,
              1000, 2000, 5000,
              10000, 25000, 50000,
              100000, 250000, 500000,
              1000000];
  for (var i = 0; i < bins.length; i++) {
    if (result.text.length < bins[i]) {
      return "length" + bins[i];
    }
  }
  return "large";
}

window.Deasciifier.onPatternListLoaded = function(patternList) {
  $("#loading").hide();
  Deasciifier.init(patternList);
  enableControls(true);
  document.getElementById("btn_deasciify").style.visibility = "visible";
  document.getElementById("btn_asciify").style.visibility = "visible";

  DeasciifyApp.init({
    "textbox": textArea,
    "keyboard_toggle_btn": "btn_keyboard"
  });
  textArea.onclick = on_focus_handler; // TODO: This will be overriden by suggestions popup menu?
  textArea.onfocus = on_focus_handler;

  document.getElementById("btn_deasciify").onclick = function() {
    var result = DeasciifyApp.deasciifySelection(document.getElementById("txt"));
    ga('send', 'event', 'button', 'deasciify-old', getSizeBin(result));
  }
  document.getElementById("btn_asciify").onclick = function() {
    var result = DeasciifyApp.asciifySelection(document.getElementById("txt"));
    ga('send', 'event', 'button', 'asciify-old', getSizeBin(result));
  }
}

var first_time_clicked = true;
function on_focus_handler() {
  if (first_time_clicked) {
    textArea.style.color = 'black';
    textArea.value = '';
    first_time_clicked = false;
  }
}

if (textArea.value=="") {
  textArea.innerHTML = PageTexts.info_text[current_lang];
  textArea.style.color = "#888";
}

</script>
<!-- /Deasciification -->
<!-- IE6 Background hover image hack: -->
<script type="text/javascript">
try {
 document.execCommand('BackgroundImageCache', false, true);
} catch(e) {}
</script>

